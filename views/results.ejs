<% include partials/header %>
<div class="container mt-2 text-center">
    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3"></div>
        <div class="col-sm-6 col-md-6 col-lg-6 ">
                <% data["Search"].forEach(function(movie) { %>
                    <div class="card" style="width:70%;">
                            <img class="card-img-top img-responsive" src="<%= movie['Poster'] %>" alt="Card image">
                            <div class="card-body">
                                <h4 class="card-title" style="color:black;"><%= movie["Title"] %></h4>
                                <p class="card-text" style="color:black;">Type: <%= movie["Type"] %> <br>
                                Year: <%= movie["Year"] %>
                            </p>
                                 <a href="/show/<%= movie['imdbID'] %>" class="btn btn-outline-danger btn-block">More Info</a>
                            </div>
                        </div>
                        <br> 
                <% }) %>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3"></div>
    </div>   
</div>

<% include partials/footer %>